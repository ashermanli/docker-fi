RUN chmod a+rx /usr/local/bin/yt-dlp

ENV LC_ALL=C.UTF-8

#ENTRYPOINT ["/usr/local/bin/yt-dlp"]
#ENTRYPOINT /usr/local/bin/yt-dlp
#CMD ["-o","ytexample.txt","BaW_jenozKc"]
#CMD -o - BaW_jenozKc > ytexample.txt
CMD yt-dlp -o - BaW_jenozKc > ytexample.txt
