
FROM ubuntu:20.04

WORKDIR /mydir

#RUN apt-get update && apt-get install -y curl
RUN apt-get update && apt-get install -y curl software-properties-common
RUN add-apt-repository ppa:deadsnakes/ppa
RUN apt-get install -y python3.7
